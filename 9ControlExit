
using System;

namespace qwerty
{
    class Program
    {
        static void Main(string[] args)
        {
            string userInput = " ";
            bool exit = true;

            while (exit)
            {
                Console.WriteLine("Бесконечный цикл, пока не введете exit");
                userInput = Console.ReadLine();

                if (userInput == "exit")
                {
                    exit = false;
                }
            }
        }
    }
}
