using System;

namespace qwerty
{
    class Program
    {
        static void Main(string[] args)
        {
            string userInput = " ";
            string exit = "exit";
            bool isInputExit = false;

            while (isInputExit == false)
            {
                Console.WriteLine("Бесконечный цикл, пока не введете exit");
                userInput = Console.ReadLine();

                if (userInput == exit)
                {
                    isInputExit = true;
                }
            }
        }
    }
}
