
using System;

namespace qwerty
{
    class Program
    {
        static void Main(string[] args)
        {
            string userInput = " ";
            bool isInputExit = false;

            while (!isInputExit)
            {
                Console.WriteLine("Бесконечный цикл, пока не введете exit");
                userInput = Console.ReadLine();

                if (userInput == "exit")
                {
                    isInputExit = true;
                }
            }
        }
    }
}
