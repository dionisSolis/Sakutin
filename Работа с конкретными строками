using System;

namespace qwerty
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int randomLimit = 100;

            int lines = 3;
            int coloumns = 3;
            int[,] matrix = new int[lines, coloumns];

            int lineForSum = 2;
            int sum = 0;
            int coloumnForMultiply = 1;
            int multiply = 1;

            Console.WriteLine("Матрица");

            for (int i = 0; i < lines; i++)
            {
                for (int j = 0; j < coloumns; j++) 
                {
                    matrix[i, j] = random.Next(randomLimit);

                    if (i == lineForSum - 1)
                    {
                        sum += matrix[i, j];
                    }
                    if (j == coloumnForMultiply - 1)
                    {
                        multiply *= matrix[i, j];
                    }

                    Console.Write($"{matrix[i, j]}\t");
                }

                Console.WriteLine();
            }

            Console.WriteLine($"\nСумма строки №{lineForSum}: {sum}");
            Console.WriteLine($"Произведение столбца №{coloumnForMultiply}: {multiply}");
        }
    }
}
