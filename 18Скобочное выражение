using System;

namespace qwerty
{
    class Program
    {
        const char OpenBracket = '(';
        const char CloseBracket = ')';
        static void Main(string[] args)
        {
            string userInput;
            
            int cntOpenBrackets = 0;
            int cntCloseBrackets = 0;
            int maxDeepBrackets = 0;

            Console.Write("Введите строку из скобок: ");
            userInput = Console.ReadLine();

            foreach (char symbol in userInput)
            {
                switch (symbol)
                {
                    case OpenBracket:
                        cntOpenBrackets++;
                        break;
                    case CloseBracket:
                        cntCloseBrackets++;
                        break;
                }

                if (cntCloseBrackets > cntOpenBrackets)
                {
                    break;
                }
                else if ((cntOpenBrackets - cntCloseBrackets) > maxDeepBrackets)
                {
                    maxDeepBrackets = cntOpenBrackets - cntCloseBrackets;
                }
            }

            if (cntOpenBrackets == cntCloseBrackets)
            {
                Console.WriteLine($"\nСтрока корректная и максимум глубины равняется {maxDeepBrackets}");
            }
            else
            {
                Console.WriteLine("\nСтрока некорректная");
            }
        }
    }
}
