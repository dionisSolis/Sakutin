using System;

namespace qwerty
{
    class Program
    {
        const char OpenBracket = '(';
        const char CloseBracket = ')';
        static void Main(string[] args)
        {
            string userInput;
            int countOpenBrackets = 0;
            int countCloseBrackets = 0;
            int maxDeepBrackets = 0;

            Console.Write("Введите строку из скобок: ");
            userInput = Console.ReadLine();

            foreach (char symbol in userInput)
            {
                switch (symbol)
                {
                    case OpenBracket:
                        countOpenBrackets++;
                        break;

                    case CloseBracket:
                        countCloseBrackets++;
                        break;
                }
                if (countCloseBrackets > countOpenBrackets)
                {
                    break;
                }
                if ((countOpenBrackets - countCloseBrackets) > maxDeepBrackets)
                {
                    maxDeepBrackets = countOpenBrackets - countCloseBrackets;
                }
            }
            if (countOpenBrackets == countCloseBrackets)
            {
                Console.WriteLine($"\nСтрока корректная и максимум глубины равняется {maxDeepBrackets}");
            }
            else
            {
                Console.WriteLine("\nСтрока некорректная");
            }
        }
    }
}
