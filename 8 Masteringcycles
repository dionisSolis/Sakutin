using System;

namespace qwerty
{
    class Program
    {
        static void Main(string[] args)
        {
            string userInput;
            int amountToRepeat;

            Console.Write("Введите сообщение для повтора: ");
            userInput = Console.ReadLine();
            Console.Write("Введите кол-во повторов: ");
            amountToRepeat = int.Parse(Console.ReadLine());

            for (int i = 0; i < amountToRepeat; i++)
            {
                Console.WriteLine(i + 1 + ") " + userInput);
            }
        }
    }
}
