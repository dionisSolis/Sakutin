using System;

namespace qwerty
{
    class Program
    {
        static void Main(string[] args)
        {
            DrawBar(40, 0, 0, 10);
        }

        static void DrawBar(int value, int coordinateX, int coordinateY, int step)
        {
            int maxValue = 100;

            char openBracket = '[';
            char closeBracket = ']';
            char fullPoint = '#';
            char emptyPoint = '_';

            string bar = "";

            bar += openBracket;

            for (int i = 0; i < maxValue; i += step)
            {
                if (i < value)
                {
                    bar += fullPoint;
                }
                else
                {
                    bar += emptyPoint;
                }
            }

            bar += closeBracket;
            Console.SetCursorPosition(coordinateX, coordinateY);
            Console.WriteLine(bar);
        }
    }
}
