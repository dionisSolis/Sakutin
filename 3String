using System;

namespace qwerty
{
    class Program
    {
        static void Main(string[] args)
        {
            string name;
            string job;
            string zodiacSign;
            string ages;

            Console.Write("Здравствуйте! Введите следующие данные:\nИмя: ");
            name = Console.ReadLine();
            Console.Write("Возраст: ");
            ages = Console.ReadLine();
            Console.Write("Знак зодиака: ");
            zodiacSign = Console.ReadLine();
            Console.Write("Где работаете (с предлогом): ");
            job = Console.ReadLine();
            Console.WriteLine($"\nВас зовут {name}, Вам {ages}, Вы {zodiacSign} и работаете {job}");
        }
    }
}
